.row.justify-content-center.align-items-center.vh-50
  .col-12.col-md-6
    = simple_form_for @form, url: session_path, as: :session, remote: true do |f|
      = f.input :role, as: :select, collection: { t(:client) => 'client', t(:consultant) => 'consultant'},
      label: t(:account_type), include_blank: false
      = f.input :email, label: t(:email)
      = f.input :password, label: t(:password)
      = f.submit t('sign_in'), class: 'btn btn-primary'